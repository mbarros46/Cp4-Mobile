{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
  "strict": true,
  "baseUrl": ".",
  "jsx": "react",
  "moduleResolution": "node",
  "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"]
    }
  }
}
